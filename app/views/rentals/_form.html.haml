= form_for @rental do |f|
  =f.hidden_field :film_id
  -if @rental.errors.any?
    #error_explanation
      %ul
        - @rental.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :data_start
    = f.date_select :data_start, :start_year=>1990,:end_year=>Time.now.year
  .field
    = f.label :data_finish
    = f.date_select :data_finish, :start_year=>1990,:end_year=>Time.now.year
  .field
    = f.label :country_id
    %br
    =f.select :country_id,Country.all.map{|c| [c.name,c.id]}
  .actions
    = f.submit 'Сохранить'

